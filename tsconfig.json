{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true
